#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@salesforce/lwc-jest/bin/sfdx-lwc-jest" "$@"
else 
  exec node  "$basedir/../@salesforce/lwc-jest/bin/sfdx-lwc-jest" "$@"
fi
